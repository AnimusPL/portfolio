<div class="d-flex flex-column gap-3 pb-5">
    <a>
        <span style="color: #bed0e9;">{{dictionary.Ph6}} {{dictionary.Ph7}}</span>
    </a>
    <a>
        <span class="text-white">{{dictionary.Ph10}}</span>
    </a>
</div>

<div class="d-flex flex-column gap-3 portfolio-cv">

    {{#experience}}
    <div class="d-flex p-3 portfolio-cv-block" data-url="{{getPhrase this.CompanyUrl}}">
        <div class="w-30">
            <span class="text-13 fw-400" style="text-wrap: nowrap;">{{getPhrase this.From}} - {{getPhrase this.To}}</span>
        </div>
        <div class="d-flex flex-column gap-2 portfolio-cv-block-list">
            <span class="text-ffffff">{{getPhrase this.Position}} - <span>{{getPhrase this.Company}}{{#if this.CompanyUrl}}<img style="width: 20px; height: 20px;" src="assets/images/arrow-forward.svg" />{{/if}}</span></span>
            {{!-- <span></span> --}}
            <span>
                <ul class="d-flex flex-column gap-2">
                    {{#each this.Responsibilities}}
                        <li>{{getPhrase this.text}}</li>
                    {{/each}}
                </ul>
            </span>
            <span class="d-flex my-1 gap-2" style="flex-wrap: wrap;">
                {{#each this.Technologies}}
                    <div class="text-00f7ff text-13 p-2 portfolio-tech-name" style="filter: {{../../techNameHue}};">
                        {{getPhrase this.name}}
                    </div>
                {{/each}}
            </span>
        </div>
    </div>
    {{/experience}}
</div>
